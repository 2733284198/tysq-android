<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_blank"
        android:layout_width="57.5dp"
        android:layout_height="57.5dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_no_exist_article" />

    <TextView
        android:id="@+id/tv_tip"
        style="@style/blank_tv_tip"
        android:layout_below="@id/iv_blank"
        android:layout_marginTop="10dp"
        android:text="@string/blank_no_exist_article" />

</RelativeLayout>