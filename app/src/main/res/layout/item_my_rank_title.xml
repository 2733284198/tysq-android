<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_rect_gradual_red" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_alignStart="@id/iv_bg"
        android:layout_alignTop="@id/iv_bg"
        android:layout_alignEnd="@id/iv_bg"
        android:layout_alignBottom="@id/iv_bg"
        android:background="@drawable/img_rank_top_bg"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_rank_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@id/iv_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="105500积分"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_rank_exchange"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tv_rank_info"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_white_round_line"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/my_rank_exchange"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_rank_order"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@id/tv_rank_exchange"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:background="@drawable/shape_white_round_line"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/my_rank_order"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/iv_bg"
        android:background="@color/rv_color" />

    <View
        android:id="@+id/v_blue_divider"
        style="@style/tag_line"
        android:layout_below="@id/v_divider"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/v_divider"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/v_blue_divider"
        android:gravity="center"
        android:text="@string/my_rank_detail"
        android:textColor="@color/main_text_color"
        android:textStyle="bold" />

    <View
        style="@style/divider_line"
        android:layout_below="@id/tv_detail_title" />

</RelativeLayout>