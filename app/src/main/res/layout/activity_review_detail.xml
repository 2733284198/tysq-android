<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/toolbar_back_style" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_title"
        android:text="@string/review_detail_title" />

    <View
        android:id="@+id/v_divider"
        style="@style/divider_line"
        android:layout_below="@id/tv_title" />

    <LinearLayout
        android:id="@+id/ll_enter_review"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edittext_with_gray_border_bg"
            android:drawableStart="@drawable/ic_pencil_light_gray"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:text="@string/review_detail_enter_review"
            android:textColor="@color/et_tip_text_color"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/v_divider_bottom"
        style="@style/divider_line"
        android:layout_above="@id/ll_enter_review"
        android:background="@color/rv_color" />

    <FrameLayout
        android:id="@+id/frame_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/v_divider_bottom"
        android:layout_below="@id/v_divider" />

</RelativeLayout>